# Environment Configuration Template
# Copy this file to .env.development and .env.production and fill in your values

# Node Environment
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/yoraa1

# Server Configuration
PORT=8080
HOST=localhost

# Admin Configuration
ADMIN_PHONE=your_phone_number
ADMIN_PASSWORD=your_secure_password
ADMIN_NAME=Admin User
ADMIN_EMAIL=admin@example.com

# API Configuration
API_BASE_URL=http://localhost:8001/api
FRONTEND_URL=http://localhost:3001

# Security
JWT_SECRET=your_jwt_secret_key_here
SECRET_KEY=your_secret_key_here
JWT_EXPIRES_IN=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# AWS/S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Twilio Configuration (for SMS/OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password

# Shiprocket Configuration
SHIPROCKET_API_EMAIL=support@yoraa.in
SHIPROCKET_API_PASSWORD=R@0621thik
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple Sign In Configuration
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id

# FCM (Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key

# Other Configuration
LOG_LEVEL=debug
ENABLE_CORS=true
